<script>
  const namedColors = {
    "#000000": "Black",
    "#FFFFFF": "White",
    "#FF0000": "Red",
    "#00FF00": "Lime",
    "#0000FF": "Blue",
    "#FFFF00": "Yellow",
    "#00FFFF": "Cyan",
    "#FF00FF": "Magenta",
    "#808080": "Gray",
    "#800000": "Maroon",
    "#008000": "Green",
    "#000080": "Navy",
    "#808000": "Olive",
    "#800080": "Purple",
    "#008080": "Teal",
    "#C0C0C0": "Silver",
    "#FFA500": "Orange",
    "#A52A2A": "Brown",
    "#F5F5DC": "Beige",
    "#FFC0CB": "Pink",
    "#FFD700": "Gold"
  };

  function hexToRgb(hex) {
    hex = hex.replace("#", "");
    let bigint = parseInt(hex, 16);
    return {
      r: (bigint >> 16) & 255,
      g: (bigint >> 8) & 255,
      b: bigint & 255
    };
  }

  function getClosestColorName(hex) {
    const target = hexToRgb(hex);
    let minDistance = Infinity;
    let closestName = "Custom Color";

    for (let namedHex in namedColors) {
      const namedRgb = hexToRgb(namedHex);
      const distance = Math.sqrt(
        Math.pow(target.r - namedRgb.r, 2) +
        Math.pow(target.g - namedRgb.g, 2) +
        Math.pow(target.b - namedRgb.b, 2)
      );
      if (distance < minDistance) {
        minDistance = distance;
        closestName = namedColors[namedHex];
      }
    }

    return closestName;
  }

  const colorPicker = document.getElementById("colorPicker");
  const colorCodeInput = document.getElementById("color_code");
  const colorNameInput = document.getElementById("color_name");

  colorPicker.addEventListener("input", function () {
    const hex = this.value;
    colorCodeInput.value = hex;
    colorNameInput.value = getClosestColorName(hex);
  });

  // Initialize default values
  colorPicker.dispatchEvent(new Event('input'));
</script>


