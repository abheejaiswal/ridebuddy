<%- include('partials/sidebar') %>

<!-- DataTables CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

<style>
  .table-hover tbody tr:hover{
    background-color: #f0f8ff !important;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .table-striped tbody tr:nth-of-type(odd){
    background-color: #f9f9f9;
  }

  .thead-light th{
    background-color: #e9ecef;
    font-weight: 600;
    color: #495057;
  }

  .table td,
  .table th{
    vertical-align: middle;
    padding: 12px;
  }

  .badge{
    font-size: 0.75rem;
    padding: 0.4em 0.65em;
    border-radius: 0.35rem;
  }

  .card:hover{
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.08);
    transition: 0.3s ease;
  }

  /* Pagination Styling */ 
  .dataTables_wrapper .dataTables_paginate .paginate_button {
    padding: 0.5em 1em;
    margin-left: 3px;
    border-radius: 0.25rem;
    background: #f8f9fc;
    border: 1px solid #d1d3e2;
    color: #4e73df !important;
  }

  .dataTables_wrapper .dataTables_paginate .paginate_button.current {
    background: #4e73df !important;
    color: white !important;
  }

  .read-more-text{
    display: none;
  }

  .read-more-btn {
    color: #007bff;
    cursor: pointer;
  }
</style>

<div id="content-wrapper" class="d-flex flex-column">
  <div id="content">
    <%- include('partials/header') %>

    <div class="container-fluid" id="container-wrapper">
      <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Ride Details</h1>
      </div>

      <div class="row">
        <div class="col-lg-12 mb-4">
          <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h6 class="m-0 font-weight-bold">All Fare Rules</h6>
            </div>

            <div class="table-responsive">
              <table id="dataTable" class="table table-hover table-striped align-items-center table-flush">
                <thead class="thead-light">
                  <tr>
                    <th>ID</th>
                    <th>User ID</th>
                    <th>Start Address</th>
                    <th>End Address</th> 
                    <th>Vehicle ID</th>
                    <th>Full Price</th>
                    <th>Comment</th>
                    <th>Status</th>
                    <th>Created At</th>
                   
                    <th>Ride Stop</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (documents && documents.length > 0) { %>
                    <% documents.forEach((ride) => { %>
                      <tr>
                        <td><%= ride.id %></td>
                        <td><%= ride.user_name %></td>
                        <td>
                        
                          <% if (ride.start_address && ride.start_address.length > 30) { %>
                            <span class="short-text"><%= ride.start_address.slice(0, 30) %>...</span>
                            <span class="full-text d-none"><%= ride.start_address %></span>
                            <a href="javascript:void(0);" class="read-toggle text-primary" onclick="toggleReadMore(this)">Read More</a>
                          <% } else { %>
                            <%= ride.start_address %>
                          <% } %>
                        </td>
                        <td><%= ride.end_address %></td>
                        <td><%= ride.vehicle_id %></td>
                        <td><%= ride.full_price %></td>
                        <td><%= ride.comment %></td>
                        <td>
                                 
                          <% if (ride.status == 1) { %>
                            <span class="badge badge-success">Publish</span>
                          <% } else if (ride.status == 2) { %>
                            <span class="badge badge-info">Completed</span>
                          <% } else if (ride.status == 3) { %>
                            <span class="badge badge-danger">Cancelled</span>
                          <% } else if (ride.status == 4) { %>
                            <span class="badge badge-warning">Cancelled by User</span>
                          <% } else { %>
                            <span class="badge badge-secondary">Unknown</span>
                          <% } %>
                        </td>
                        <td><%= new Date(ride.created_at).toLocaleString() %></td>
                       
                    <td><a href="ride_stop/<%= ride.id %>" class="btn btn-sm btn-primary">RideStop</a></td>
                      </tr>
                    <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="10" class="text-center">No ride records found.</td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div> 
          </div>
        </div>
      </div>
    </div>

    <%- include('partials/footer') %>
  </div>
</div>
<!-- Read More Script -->
<script>
  function toggleReadMore(el) {
    const parent = el.closest('td');
    const shortText = parent.querySelector('.short-text');
    const fullText = parent.querySelector('.full-text');

    if (shortText.classList.contains('d-none')) {
      shortText.classList.remove('d-none');
      fullText.classList.add('d-none');
      el.innerText = 'Read More';
    } else {
      shortText.classList.add('d-none');
      fullText.classList.remove('d-none');
      el.innerText = 'Read Less';
    }
  }
</script>

