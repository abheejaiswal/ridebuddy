<%- include('partials/sidebar') %>

<style>
  /* Hover effect on table rows */
  .table-hover tbody tr:hover {
    background-color: #f0f8ff !important;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  /* Zebra striping */
  .table-striped tbody tr:nth-of-type(odd) {
    background-color: #f9f9f9;
  }

  /* Stylish table headers */
  .thead-light th {
    background-color: #e9ecef;
    font-weight: 600;
    color: #495057;
  }

  /* Table styling */
  .table td, .table th {
    vertical-align: middle;
    padding: 12px;
  }

  /* Badge style overrides */
  .badge {
    font-size: 0.75rem;
    padding: 0.4em 0.65em;
    border-radius: 0.35rem;
  }

  /* Card hover effect */
  .card:hover {
    box-shadow: 0 0 15px rgba(0,0,0,0.08);
    transition: 0.3s ease;
  }
</style>

<div id="content-wrapper" class="d-flex flex-column">
  <div id="content">
    <%- include('partials/header') %>

    <div class="container-fluid" id="container-wrapper">
      <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Feedback</h1>
      </div>

      <div class="row">
        <div class="col-lg-12 mb-4">
          <div class="card">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
              <h6 class="m-0 font-weight-bold text-primary">All Feedback</h6>
            </div>

            <div class="table-responsive">
              <table class="table table-hover table-striped align-items-center table-flush">
                <thead class="thead-light">
                  <tr>
                    <th>ID</th>
                    <th>Ride ID</th>
                    <th>Reviewer</th>
                    <th>Reviewee</th>
                    <th>Comment</th>
                    <th>Rating</th>
                    <th>Date</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (documents && documents.length > 0) { %>
                    <% documents.forEach((feedback) => { %>
                      <tr>
                        <td><%= feedback.id %></td>
                        <td><%= feedback.ride_id %></td>
                        <td><%= feedback.reviewer_name %></td>
                        <td><%= feedback.reviewee_name %></td>
                        <td><%= feedback.comment %></td>
                        <td><%= feedback.rating %></td>
                        <td><%= new Date(feedback.created_at).toLocaleString() %></td>
                      </tr>
                    <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="7" class="text-center">No feedback found.</td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>

            <!-- Bootstrap Pagination -->
            <div class="card-footer d-flex justify-content-between align-items-center">
              <nav>
                <ul class="pagination mb-0">
                  <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                  </li>

                  <% for(let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                      <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                    </li>
                  <% } %>

                  <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                  </li>
                </ul>
              </nav>
              <span class="text-muted small mt-2">Page <%= currentPage %> of <%= totalPages %></span>
            </div>

          </div>
        </div>
      </div>
    </div>

    <%- include('partials/footer') %>
  </div>
</div>

<!-- Optional: jQuery if needed for other scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
