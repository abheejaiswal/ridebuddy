<%- include('partials/sidebar') %>

<!-- DataTables CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

<style>
  .table-hover tbody tr:hover {
    background-color: #f0f8ff !important;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .table-striped tbody tr:nth-of-type(odd) {
    background-color: #f9f9f9;
  }

  .thead-light th {
    background-color: #e9ecef;
    font-weight: 600;
    color: #495057;
  }

  .table td,
  .table th {
    vertical-align: middle;
    padding: 12px;
  }

  .card:hover {
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.08);
    transition: 0.3s ease;
  }

  .dataTables_wrapper .dataTables_paginate .paginate_button {
    padding: 0.5em 1em;
    margin-left: 3px;
    border-radius: 0.25rem;
    background: #f8f9fc;
    border: 1px solid #d1d3e2;
    color: #4e73df !important;
  }

  .dataTables_wrapper .dataTables_paginate .paginate_button.current {
    background: #4e73df !important;
    color: white !important;
  }

  .read-more-text {
    display: none;
  }

  .read-more-btn {
    color: #007bff;
    cursor: pointer;
  }
</style>

<div id="content-wrapper" class="d-flex flex-column">
  <div id="content">
    <%- include('partials/header') %>

    <div class="container-fluid" id="container-wrapper">
      <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Reports</h1>
      </div>

      <div class="row">
        <div class="col-lg-12 mb-4">
          <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h6 class="m-0 font-weight-bold">All Reports</h6>
            </div>

            <div class="table-responsive">
              <table id="dataTable" class="table table-hover table-striped align-items-center table-flush">
                <thead class="thead-light">
                  <tr>
                    <th>ID</th>
                    <th>Reporter</th>
                    <th>Reported User</th>
                    <th>Reason</th>
                    <th>Created At</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (reports && reports.length > 0) { %>
                    <% reports.forEach((ride) => { %>
                      <tr>
                        <td><%= ride.id %></td>
                        <td><%= ride.reporter_name || ride.reporter_id %></td>
                        <td><%= ride.reported_name || ride.reported_user_id %></td>
                        <td>
                          <% if (ride.reason && ride.reason.length > 50) { %>
                            <span class="short-text"><%= ride.reason.substring(0,50) %>...</span>
                            <span class="full-text d-none"><%= ride.reason %></span>
                            <span class="read-more-btn" onclick="toggleReadMore(this)">Read More</span>
                          <% } else { %>
                            <%= ride.reason || '-' %>
                          <% } %>
                        </td>
                        <td><%= new Date(ride.created_at).toLocaleString() %></td>
                      </tr>
                    <% }) %>
                  <% } else { %>
                    
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('partials/footer') %>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

<script>
  $(document).ready(function () {
    if (!$.fn.DataTable.isDataTable('#dataTable')) {
      $('#dataTable').DataTable({
        pageLength: 10,
        lengthMenu: [5, 10, 25, 50, 100],
        ordering: true,
        info: true,
        language: {
          search: '',
          searchPlaceholder: "Search...",
          lengthMenu: "Show _MENU_ entries",
          info: "Showing _START_ to _END_ of _TOTAL_ entries",
          paginate: {
            previous: "Previous",
            next: "Next"
          }
        }
      });
    }
  });

  function toggleReadMore(btn) {
    const parent = btn.closest('td');
    const shortText = parent.querySelector('.short-text');
    const fullText = parent.querySelector('.full-text');

    if (shortText.classList.contains('d-none')) {
      shortText.classList.remove('d-none');
      fullText.classList.add('d-none');
      btn.innerText = 'Read More';
    } else {
      shortText.classList.add('d-none');
      fullText.classList.remove('d-none');
      btn.innerText = 'Read Less';
    }
  }
</script>
