<%- include('partials/sidebar') %>

<style>
  .status-dropdown {
    padding: 6px 12px;
    border-radius: 6px;
    border: 1px solid #ccc;
    font-size: 14px;
    font-weight: 500;
    outline: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  .status-dropdown:hover { box-shadow: 0 2px 8px rgba(0,0,0,0.12); }

  .admin-info img {
    height: 60px;
    border-radius: 8px;
  }
</style>

<div id="content-wrapper" class="d-flex flex-column">
  <div id="content">
    <%- include('partials/header') %>

    <div class="container-fluid" id="container-wrapper">

      <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">System Setting</h1>
      </div>

      <!-- ADMIN INFO UPDATE FORM -->
      <div class="card shadow mb-4">
        <div class="card-header">
          <h6 class="m-0 font-weight-bold">Admin Settings</h6>
        </div>
        <div class="card-body">
          <form id="adminUpdateForm" enctype="multipart/form-data">
            <div class="form-group">
              <label>Site Name</label>
              <input type="text" class="form-control" name="site_name" value="<%= site_name %>" required />
            </div>

            <div class="form-group">
              <label>Site Logo</label><br>
              <% if (site_logo) { %>
                <img src="<%= site_logo %>" alt="Current Logo"><br><br>
              <% } %>
              <input type="file" name="site_logo" accept="image/*" class="form-control-file" />
            </div>

            <% if (settings.length > 0) { %>
              <div class="form-group">
                <label>Upload Document Setting</label>
                <select name="upload_document_status" class="form-control" required>
                  <option value="1" <%= settings[0].upload_document_status == 1 ? 'selected' : '' %>>Not Mandatory</option>
                  <option value="0" <%= settings[0].upload_document_status == 0 ? 'selected' : '' %>>Mandatory</option>
                </select>
                <input type="hidden" name="id" value="<%= settings[0].id %>">
              </div>
            <% } %>

            <button type="submit" class="btn btn-primary mt-3">Update</button>
          </form>
        </div>
      </div>

    </div>

    <%- include('partials/footer') %>
  </div>
</div>

<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
document.getElementById("adminUpdateForm").addEventListener("submit", async (e) => {
  e.preventDefault();
  const formData = new FormData(e.target);

  const res = await fetch("/update", {
    method: "POST",
    body: formData,
  });

  const data = await res.json();

  if (data.success) {
    Swal.fire({
      icon: "success",
      title: "âœ… Settings updated successfully!",
      showConfirmButton: false,
      timer: 1500,
    }).then(() => location.reload());
  } else {
    Swal.fire({
      icon: "error",
      title: "Update failed!",
      text: data.message || "Something went wrong.",
    });
  }
});
</script>
