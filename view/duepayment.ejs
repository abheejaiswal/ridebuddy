<!-- DataTable Initialization -->
<script>
  $(document).ready(function() {
    $('#rideTable').DataTable({
      "pageLength": 10,
      "lengthChange": true,
      "ordering": true,
      "searching": true,
      "info": true,
      "language": {
        "search": "Search:",
        "lengthMenu": "Show _MENU_ entries",
        "info": "Showing _START_ to _END_ of _TOTAL_ entries",
        "paginate": {
          "previous": "Previous",
          "next": "Next"
        }
      }
    });
  });
</script>
