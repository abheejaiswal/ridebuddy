    <script>
  function updateWrapperId() {
    const wrapper = document.getElementById('wrapper-container');
    
    // Check if screen width is 768px or more (desktop)
    if (window.innerWidth >= 768) {
      wrapper.setAttribute('id', 'wrapper');
    } else {
      wrapper.setAttribute('id', 'wrapper-container');
    }
  }

  // Initial check
  updateWrapperId();

  // Listen for resize
  window.addEventListener('resize', updateWrapperId);
</script>
